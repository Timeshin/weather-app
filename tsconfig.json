{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      // "@DAL/*": ["src/DAL/*"],
      // "@DALtypes/*": ["src/interfaces/DAL/*"],
      // "@img/*": ["src/images/*"],
      // "@components": ["src/components/"],
      // "@mobx": ["src/stores/index"],
      // "@styleVar": ["src/styles/variables.scss"],
      // "@interfaces/*": ["src/interfaces/*"],
      // "@helpers": ["src/helpers/index"],
      // "@hooks": ["src/hooks/index"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
